{% set siteTitle = global.name %}
{% set currentUrl = global.siteUrl %}
{% set socialImage = global.socialImage %}

{% if pageName %}
    {% set currentUrl = global.siteUrl + '/' + pageName %}
    {% set metaTitle = pageTitle + ' - ' + global.name %}
{% else %}
    {% set metaTitle = global.name %}
{% endif %}

{% if pageDesc %}
    {% set metaDesc = pageDesc %}
{% else %}
    {% set metaDesc = global.shortDesc %}
{% endif %}

<!-- Firefox, Chrome, Safari, IE 11+ and Opera. 192x192 pixels in size. -->
<link rel="icon" href="./images/fav/favicon-192x192.png">
<!-- Touch Icons - iOS and Android 2.1+ 180x180 pixels in size. --> 
<link rel="apple-touch-icon" href="./images/fav/favicon-180x180.png">
<!-- Safari pinned tab -->
<link rel="mask-icon" href="./images/fav/favicon.svg" color="#ffffff">
<!-- Web app manifest 192x192 and 512x512 -->
<link rel="manifest" href="./images/fav/manifest.json">
<meta name="apple-mobile-web-app-title" content="{{ siteTitle }}" />
<meta name="apple-mobile-web-app-status-bar-style" content="white" />
<meta name="msapplication-TileColor" content="#14d5de">
<meta name="theme-color" content="#14d5de">

<title>{{ metaTitle }}</title>
<link rel="canonical" href="{{ currentUrl }}" />
<meta property="og:locale" content="en_GB" />
<meta property="og:type" content="website" />
<meta property="og:url" content="{{ currentUrl }}" />
<meta property="og:site_name" content="{{ siteTitle }}" />

{% if global.authorHandle %}
<meta name="twitter:creator" content="@{{ global.authorHandle | replace('@', '') }}" />
{% endif %}

{% if metaTitle %}
<meta name="twitter:title" content="{{ metaTitle }}" />
<meta property="og:title" content="{{ metaTitle }}" />
{% endif %}

{% if metaDesc %}
  <meta name="description" content="{{ metaDesc }}" />
  <meta name="twitter:description" content="{{ metaDesc }}" />
  <meta property="og:description" content="{{ metaDesc }}" />
{% endif %}

{% if socialImage %}  
<meta name="twitter:card" content="summary_large_image">
<meta property="og:image" content="{{ socialImage }}" />
<meta name="twitter:image" content="{{ socialImage }}" />
<meta property="og:image:alt" content="Page image for {{ global.name }}" />
<meta name="twitter:image:alt" content="Page image for {{ global.name }}" />
<meta property="og:image:width" content="1200">
<meta property="og:image:height" content="630">
{% endif %}

{% if global.paymentPointer %}
  <meta name="monetization" content="{{ global.paymentPointer }}" />
{% endif %}